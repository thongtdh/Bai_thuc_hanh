def sleve_of_erstosthenes(limit):
   is_prime = [True] * limit
   is_prime[0] = is_prime[1] = False
   for i in range (2, int(limit**0.5) + 1):
      if is_prime[i]:
         for j in range(i * i, limit, i):
            is_prime[j] = False
   primes = [i for i in range(limit) if is_prime[i]]
   return tuple(primes)
P = sleve_of_erstosthenes(1000000)
